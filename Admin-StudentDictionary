<!-- FILTERS -->
<div class="card">
  <input id="search" placeholder="Search by name or roll no">
  <select id="classFilter">
    <option value="">All Classes</option>
  </select>
  <button onclick="loadStudents()">Search</button>
</div>

<!-- STUDENT TABLE -->
<div class="card">
  <strong>Students</strong>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Roll No</th>
        <th>Class</th>
        <th>Attendance</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="studentTable"></tbody>
  </table>
</div>

</main>
