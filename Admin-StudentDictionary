<!-- STUDENT MODAL -->
<div class="modal" id="studentModal">
  <div class="modal-content">
    <h3>Student Details</h3>
    <div id="studentDetails" class="small"></div><br>
    <button onclick="closeModal()">Close</button>
  </div>
</div>

<script>
/* API HELPER */
async function api(url){
  const r = await fetch(url,{credentials:"include"});
  return r.json();
}

/* LOAD STUDENTS */
async function loadStudents(){
  const q = search.value;
  const cls = classFilter.value;

  const students = await api(`/api/admin/students?q=${q}&class=${cls}`);

  studentTable.innerHTML = students.map(s=>{
    let status = s.attendance >= 75 ? "safe" :
                 s.attendance >= 60 ? "warn" : "risk";
    return `
      <tr>
        <td>${s.name}</td>
        <td>${s.roll}</td>
        <td>${s.class}</td>
        <td>${s.attendance}%</td>
        <td><span class="badge ${status}">
          ${status === "safe" ? "Safe" : status === "warn" ? "Warning" : "High Risk"}
        </span></td>
        <td>
          <button onclick="openStudent('${s.id}')">View</button>
        </td>
      </tr>`;
  }).join("");
}

/* STUDENT DETAILS */
async function openStudent(id){
  const s = await api(`/api/admin/student/${id}`);
  studentDetails.innerHTML = `
    <p><strong>Name:</strong> ${s.name}</p>
    <p><strong>Roll No:</strong> ${s.roll}</p>
    <p><strong>Class:</strong> ${s.class}</p>
    <p><strong>Attendance:</strong> ${s.attendance}%</p>
    <p><strong>Last Seen:</strong> ${s.lastSeen}</p>
  `;
  studentModal.classList.add("show");
}

function closeModal(){
  studentModal.classList.remove("show");
}

/* INIT */
loadStudents();
</script>

