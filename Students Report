<!-- MAIN CONTENT -->
<main class="main">

  <h2>Attendance Reports</h2>

  <!-- FILTERS -->
  <div class="card">
    <strong>Generate Report</strong><br><br>

    <select id="reportType" onchange="toggleFields()">
      <option value="subject">Subject-wise</option>
      <option value="student">Student-wise</option>
      <option value="date">Date-wise</option>
    </select>

    <select id="subjectFilter">
      <option value="">Select Subject</option>
    </select>

    <input id="studentFilter" placeholder="Student ID" style="display:none">

    <input type="date" id="fromDate">
    <input type="date" id="toDate">

    <button onclick="generateReport()">Generate</button>
  </div>

  <!-- RESULT -->
  <div class="card">
    <strong>Report Result</strong>
    <div id="result" class="small" style="margin-top:10px">
      No report generated yet.
    </div>
  </div>

  <!-- EXPORT -->
  <div class="card">
    <strong>Export</strong><br><br>
    <button onclick="exportReport('csv')">Export CSV</button>
    <button onclick="exportReport('pdf')">Export PDF</button>
  </div>

</main>
</div>

<script>
/* API HELPER */
async function api(url, options = {}){
  const res = await fetch(url, {
    credentials:"include",
    headers:{ "Content-Type":"application/json" },
    ...options
  });
  return res.json();
}

/* LOAD SUBJECTS */
async function loadSubjects(){
  const subjects = await api("/api/reports/subjects");
  subjectFilter.innerHTML =
    `<option value="">Select Subject</option>` +
    subjects.map(s=>`<option>${s}</option>`).join("");
}

/* TOGGLE INPUTS */
function toggleFields(){
  subjectFilter.style.display =
    reportType.value==="subject" ? "inline-block":"none";
  studentFilter.style.display =
    reportType.value==="student" ? "inline-block":"none";
}

/* GENERATE REPORT */
async function generateReport(){
  const payload = {
    type:reportType.value,
    subject:subjectFilter.value,
    studentId:studentFilter.value,
    from:fromDate.value,
    to:toDate.value
  };

  const data = await api("/api/reports/generate",{
    method:"POST",
    body:JSON.stringify(payload)
  });

  if(!data.length){
    result.innerHTML = "No data found.";
    return;
  }

  result.innerHTML = `
    <table>
      <tr>${Object.keys(data[0]).map(h=>`<th>${h}</th>`).join("")}</tr>
      ${data.map(r=>`
        <tr>${Object.values(r).map(v=>`<td>${v}</td>`).join("")}</tr>
      `).join("")}
    </table>`;
}

/* EXPORT */
function exportReport(type){
  window.open(`/api/reports/export?type=${type}`,"_blank");
}

/* INIT */
loadSubjects();
toggleFields();
</script>

